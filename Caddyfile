{
    auto_https disable_redirects
}

#localhost:7878 {
ncc2c.toolforge.org {
    tls internal

    # Enable static file server
    #root * /var/www/html/public_html
    root * /ncc2c/public_html
    file_server

    # Serve PHP through php-fpm:
    rewrite /api/* /backend.php
    php_fastcgi * phpfpm:9000

    log {
        output stderr
        format console
        level  info
    }
}
